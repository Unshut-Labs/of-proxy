{
	"compilerOptions": {
		"composite": true,
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ES2022",
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"types": ["@types/node"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true
	},
	"include": ["./src"]
}
